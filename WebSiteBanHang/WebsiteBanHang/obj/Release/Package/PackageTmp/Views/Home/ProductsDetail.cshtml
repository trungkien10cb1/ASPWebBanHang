@model WebsiteBanHang.Models.IndexData
@using WebsiteBanHang.Models.Entities

@{
    ViewBag.Title = "ProductsDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Product product = Model.productsDetail;
}

<div class="span9">
    <ul class="breadcrumb">
        <li><a href="/Home/Index">Trang chủ</a> <span class="divider">/</span></li>
        <li><a href="/Home/Products?type=@product.producttype">Sản phẩm</a> <span class="divider">/</span></li>
        <li class="active">Chi tiết sản phẩm</li>
    </ul>
    <div class="row">
        <div id="gallery" class="span3">
            <a href=@product.imglink title=@product.tensanpham>
                <img src=@product.imglink style="width:100%" alt=@product.tensanpham />
            </a>
            <div id="differentview" class="moreOptopm carousel slide">
                <div class="carousel-inner">
                    <div class="item active">
                        <a href=@product.imglink> <img style="width:29%" src=@product.imglink alt="" /></a>
                        <a href=@product.imglink> <img style="width:29%" src=@product.imglink alt="" /></a>
                        <a href=@product.imglink> <img style="width:29%" src=@product.imglink alt="" /></a>
                    </div>
                    @*<div class="item">
                        <a href="themes/images/products/large/f3.jpg"> <img style="width:29%" src="themes/images/products/large/f3.jpg" alt="" /></a>
                        <a href="themes/images/products/large/f1.jpg"> <img style="width:29%" src="themes/images/products/large/f1.jpg" alt="" /></a>
                        <a href="themes/images/products/large/f2.jpg"> <img style="width:29%" src="themes/images/products/large/f2.jpg" alt="" /></a>
                    </div>*@
                </div>
                <!--
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>
                -->
            </div>

            <div class="btn-toolbar">
                <div class="btn-group">
                    <span class="btn"><i class="icon-envelope"></i></span>
                    <span class="btn"><i class="icon-print"></i></span>
                    <span class="btn"><i class="icon-zoom-in"></i></span>
                    <span class="btn"><i class="icon-star"></i></span>
                    <span class="btn"><i class=" icon-thumbs-up"></i></span>
                    <span class="btn"><i class="icon-thumbs-down"></i></span>
                </div>
            </div>
        </div>

        <div class="span6">
            <h3>@product.tensanpham  </h3>
            <small style="font-size:small">@product.mota</small>
            <hr class="soft" />
            <form class="form-horizontal qtyFrm">
                <div class="control-group">
                    @{string gia = double.Parse(product.dongia.ToString()).ToString("#,###") + " VNĐ";}
                    <label class="control-label"><span>@gia</span></label>
                    <div class="controls">
                        @*<input type="number" class="span1" placeholder="Số lượng" />*@
                        <a class="btn btn-large btn-primary pull-right" href="/ShoppingCart/Add?ma=@product.ma&&soluong=1"> Thêm vào giỏ hàng <i class="icon-shopping-cart"></i></a>
                    </div>
                </div>
            </form>

            <hr class="soft" />
            <h4>Còn hàng</h4>
            <form class="form-horizontal qtyFrm pull-right">
                @*<div class="control-group">
                    <label class="control-label"><span>Màu sắc</span></label>
                    <div class="controls">
                        <select class="span2">
                            <option>Đen</option>
                            <option>Hồng</option>
                            <option>Tím</option>
                            <option>Hường</option>
                        </select>
                    </div>
                </div>*@
            </form>
            <hr class="soft clr" />
            <p style="font-size:medium">
                @product.mota
            </p>
            <a class="btn btn-small pull-right" href="#detail">Thông tin thêm</a>
            <br class="clr" />
            <a href="#" name="detail"></a>
            <hr class="soft" />
        </div>

        <div class="span9">
            <ul id="productDetail" class="nav nav-tabs">
                @*<li class="active"><a href="#home" data-toggle="tab">Product Details</a></li>
                <li><a href="#profile" data-toggle="tab">Related Products</a></li>*@
            </ul>
            <div id="myTabContent" class="tab-content">
                <div class="tab-pane fade active in" id="home">
                    <h4>Thông tin sản phẩm</h4>
                    <table class="table table-bordered">
                        <tbody>
                            <tr class="techSpecRow"><th colspan="2">Chi tiết sản phẩm</th></tr>
                            <tr class="techSpecRow"><td class="techSpecTD1">Thương hiệu: </td><td class="techSpecTD2">@product.hangsanxuat</td></tr>
                            <tr class="techSpecRow"><td class="techSpecTD1">Tên máy: </td><td class="techSpecTD2">@product.tensanpham</td></tr>
                            <tr class="techSpecRow"><td class="techSpecTD1">Vi xử lý: </td><td class="techSpecTD2">@product.ProductDetail.vixuly</td></tr>
                            <tr class="techSpecRow"><td class="techSpecTD1">Bộ nhớ RAM: </td><td class="techSpecTD2">@product.ProductDetail.ram</td></tr>
                            <tr class="techSpecRow"><td class="techSpecTD1">Ổ cứng: </td><td class="techSpecTD2">@product.ProductDetail.diacung</td></tr>
                            <tr class="techSpecRow"><td class="techSpecTD1">Màn hình: </td><td class="techSpecTD2">@product.ProductDetail.manhinh</td></tr>
                            <tr class="techSpecRow"><td class="techSpecTD1">VGA: </td><td class="techSpecTD2">@product.ProductDetail.vga</td></tr>
                        </tbody>
                    </table>
                </div>
                
            </div>
        </div>
    </div>
</div>

