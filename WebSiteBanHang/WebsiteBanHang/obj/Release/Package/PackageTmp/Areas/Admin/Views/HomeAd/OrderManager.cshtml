@using PagedList;
@using PagedList.Mvc;
@model IPagedList<WebsiteBanHang.Models.Entities.Order>

@{
    ViewBag.Title = "OrderManager";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int count = 0;
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Quản lý đơn hàng</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    @*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
    <table class="table">
        <tr>
            <th>
                STT
            </th>
            <th>
                Mã khách hàng
            </th>
            <th>
                Ngày Đặt hàng
            </th>
            <th>
                Trạng thái
            </th>
            <th>
                Ngày giao hàng
            </th>
            <th>
                Chức năng
            </th>
        </tr>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>
                    @count
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.makhachhang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ngaydathang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ngaygiaohang)
                </td>
                <td>
                    
                    @Html.ActionLink("Xem chi tiết", "Details","Order", new { ma = item.ma }, null)
                    
                </td>
            </tr>
        }

    </table>
    @Html.PagedListPager(Model, page => Url.Action("CategoryManager", new { page = page }))
</div>
    
